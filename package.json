{
  "name": "clean-react",
  "version": "1.6.2",
  "description": "Sistema em ReactJs com o uso de Hooks, Typescript, TDD, Clean Architecture, Design Patterns e SOLID principles",
  "author": "Alexandre Oliveira",
  "license": "GNU GPL3",
  "scripts": {
    "start": "node index",
    "build": "webpack --config webpack.prod.js",
    "dev:base": "webpack-dev-server --config webpack.dev.js",
    "dev": "npm run dev:base -- --open",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:ci": "npm t -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "test:cypress": "cypress open",
    "test:cypress:run": "cypress run",
    "test:cypress:ci": "start-server-and-test dev:base http-get://localhost:8080 test:cypress:run",
    "check": "npm-check -s -u",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/faker": "^5.5.9",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "clean-webpack-plugin": "^4.0.0",
    "coveralls": "^3.1.1",
    "css-loader": "^6.7.3",
    "cypress": "^12.3.0",
    "eslint": "^8.31.0",
    "eslint-config-standard-with-typescript": "^27.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.32.0",
    "faker": "^5.5.3",
    "favicons-webpack-plugin": "^6.0.0",
    "git-commit-msg-linter": "^4.5.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jest-localstorage-mock": "^2.4.26",
    "lint-staged": "^13.1.0",
    "mini-css-extract-plugin": "^2.7.6",
    "node-sass": "^8.0.0",
    "sass-loader": "^13.0.2",
    "start-server-and-test": "^2.0.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.4",
    "ts-loader": "^9.4.2",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "axios": "^1.2.2",
    "express": "^4.18.2",
    "express-history-api-fallback": "^2.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.2"
  }
}
